{
  "colors.enable": true,
  "codeLens.enable": true,
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.willSaveHandlerTimeout": 1000,
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.enableLinkedEditing": true,
  "coc.preferences.formatOnSave": true,
  "coc.source.file.ignoreHidden": false,
  "diagnostic.format": "%message [%source]",
  "diagnostic.checkCurrentLine": false,
  "diagnostic.messageTarget": "float",
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.errorSign": "✘",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "links.tooltip": true,
  "links.highlight": true,
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "semanticTokens.enable": true,
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.detailField": "abbr",
  "suggest.defaultSortMethod": "none",
  "suggest.selection": "recentlyUsedByPrefix",
  "suggest.enablePreselect": true,
  "suggest.noselect": true,
  "suggest.floatConfig": {
    "rounded": true,
    "border": true
  },
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  "signature.enable": true,
  "signature.target": "float",
  "signature.floatConfig": {
    "rounded": true,
    "border": true
  },
  "highlight.colors.enable": true,
  "clangd.arguments": [
    "--clang-tidy",
    "--header-insertion=iwyu"
  ],
  "clangd.fallbackFlags": [
    "-std=c++17"
  ],
  "python.analysis.typeCheckingMode": "strict",
  "python.linting.pylintEnabled": true,
  "python.pythonPath": "/usr/bin/python3",
  "languageserver": {
    "ocaml": {
      "command": "ocaml-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "ocaml",
        "reason"
      ]
    },
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    }
  }
}
